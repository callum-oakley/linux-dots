# System
super + alt + ctrl + r
  reboot
super + alt + ctrl + s
  shutdown -h now
super + r
  pkill -USR1 -x sxhkd
super + w
  fgwm kill
super + q
  pkill -x fgwm
super + l
  playerctl pause; i3lock -eui ~/wallpapers/hangul-keyboard-inverted.png
super + s
  playerctl pause; i3lock -eui ~/wallpapers/hangul-keyboard-inverted.png && systemctl suspend

# Media
XF86AudioRaiseVolume
  pactl set-sink-volume @DEFAULT_SINK@ +5%
XF86AudioLowerVolume
  pactl set-sink-volume @DEFAULT_SINK@ -5%
XF86AudioMute
  pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86AudioPlay
  playerctl play-pause
XF86AudioNext
  playerctl next
XF86AudioPrev
  playerctl previous

# Backlight
super + XF86AudioRaiseVolume
  xbacklight -inc 10
super + XF86AudioLowerVolume
  xbacklight -dec 10

# Screenshots
super + z
  scrot -e 'mv $f ~/Desktop/'
super + shift + z
  sleep 0.2; scrot -e 'mv $f ~/Desktop/' -s

# Applications
super + ctrl + space
  urxvt
super + ctrl + a
  anki
super + ctrl + e
  emoji-keyboard -s
super + ctrl + b
  firefox-developer-edition
super + ctrl + shift + b
  chromium
super + ctrl + m
  spotify --force-device-scale-factor=$WINDOW_SCALING
super + ctrl + d
  sqlectron
super + ctrl + s
  android-studio
super + ctrl + t
  urxvt -e htop
super + ctrl + c
  urxvt -e tty-clock -c

# Group management
super + {1-9}
  fgwm view-set {1-9}
super + shift + {1-9}
  fgwm view-set 1{1-9}
super + ctrl + {1-9}
  fgwm view-include {1-9}
super + ctrl + shift + {1-9}
  fgwm view-include 1{1-9}

# Move windows
super + c
  fgwm center
super + {Up,Down,Left,Right}
  fgwm move {0 -2,0 2,-2 0,2 0}
super + shift + {Up,Down,Left,Right}
  fgwm move {0 -1,0 1,-1 0,1 0}
super + ctrl + {Up,Down,Left,Right}
  fgwm throw {up,down,left,right}

# Size windows
super + alt + ctrl + 1
  fgwm teleport 8 0 16 24
super + alt + ctrl + 2
  fgwm teleport 6 0 18 24
super + alt + ctrl + 3
  fgwm teleport 4 0 20 24
super + alt + ctrl + shift + 1
  fgwm teleport 8 6 16 18
super + alt + ctrl + shift + 2
  fgwm teleport 6 4 18 20
super + alt + ctrl + shift + 3
  fgwm teleport 4 2 20 22

# Resize windows
super + {Prior,Next,Home,End}
  fgwm grow {0 -2,0 2,-2 0,2 0}
super + shift + {Prior,Next,Home,End}
  fgwm grow {0 -1,0 1,-1 0,1 0}
super + ctrl + {Prior,Next,Home,End}
  fgwm spread {up,down,left,right}
super + f
  fgwm fullscreen

# Snap!
super + space
  fgwm snap

# Focus windows
super + alt + {Left,Right}
  fgwm focus {next,prev}
super + Tab
  fgwm focus next
super + shift + Tab
  fgwm focus prev
