# System
super + alt + ctrl + r
  reboot
super + alt + ctrl + s
  shutdown -h now
super + r
  pkill -USR1 -x sxhkd
super + w
  waitron window_close
super + q
  waitron wm_quit 0
super + l
  lock
super + s
  lock && systemctl suspend

# Media
XF86AudioRaiseVolume
  amixer set Master 5%+
XF86AudioLowerVolume
  amixer set Master 5%-
XF86AudioMute
  amixer set Master toggle
XF86AudioPlay
  playerctl play-pause
XF86AudioNext
  playerctl next
XF86AudioPrev
  playerctl previous

# Screenshots
super + z
  scrot -e 'mv $f ~/Desktop/'
super + shift + z
  sleep 0.2; scrot -e 'mv $f ~/Desktop/' -s

# Applications
super + ctrl + Return
  urxvt &; sleep 0.2;\
  waitron window_resize_absolute $((4 * UNIT_X - GAP)) $((8 * UNIT_Y - GAP));\
  waitron window_snap middle
super + ctrl + shift + Return
  firefox-developer &; sleep 0.2;\
  waitron window_resize_absolute $((6 * UNIT_X - GAP)) $((10 * UNIT_Y - GAP));\
  waitron window_snap middle
super + ctrl + m
  spotify --force-device-scale-factor=$WINDOW_SCALING &; sleep 0.2;\
  waitron window_resize_absolute $((8 * UNIT_X - GAP)) $((10 * UNIT_Y - GAP));\
  waitron window_snap middle
super + ctrl + t
  urxvt -e htop &; sleep 0.2;\
  waitron window_resize_absolute $((4 * UNIT_X - GAP)) $((6 * UNIT_Y - GAP));\
  waitron window_snap middle
super + ctrl + c
  urxvt -e tty-clock -c &; sleep 0.2;\
  waitron window_resize_absolute $((4 * UNIT_X - GAP)) $((4 * UNIT_Y - GAP));\
  waitron window_snap middle
super + ctrl + shift + c
  urxvt -e tty-clock -c &; sleep 0.2;\
  waitron window_maximize

# Group management
super + {1-9}
  waitron group_toggle {1-9}
super + shift + {1-9}
  waitron group_add_window {1-9}
super + ctrl + {1-9}
  waitron group_activate_specific {1-9}

# Move windows
super + c
  waitron window_snap middle
super + {Up,Down,Left,Right}
  waitron window_move {0 -$UNIT_Y, 0 $UNIT_Y, -$UNIT_X 0, $UNIT_X 0}
super + shift + {Up,Down,Left,Right}
  waitron window_move {0 -$((2 * UNIT_Y)), 0 $((2 * UNIT_Y)), -$((2 * UNIT_X)) 0, $((2 * UNIT_X)) 0}
super + alt + ctrl + {Up,Down,Left,Right}
  waitron window_snap {topleft,bottomright,bottomleft,topright}

# Resize windows
super + {Prior,Next,Home,End}
  waitron window_resize {0 -$((2 * UNIT_Y)), 0 $((2 * UNIT_Y)), -$((2 * UNIT_X)) 0, $((2 * UNIT_X)) 0}
super + shift + {Prior,Next,Home,End}
  waitron window_resize {0 -$UNIT_Y, 0 $UNIT_Y, -$UNIT_X 0, $UNIT_X 0}
super + m
  waitron window_monocle
super + f
  waitron window_maximize
super + v
  waitron window_ver_maximize

# Focus windows
super + BackSpace
  waitron window_focus_last
super + ctrl + {Up,Down,Left,Right}
  waitron window_cardinal_focus {up,down,left,right}
super + Tab
  waitron window_cycle
super + shift + Tab
  waitron window_rev_cycle
