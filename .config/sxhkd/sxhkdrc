# System
super + alt + ctrl + r
  reboot
super + alt + ctrl + s
  shutdown -h now
super + r
  pkill -USR1 -x sxhkd
super + w
  waitron window_close
super + q
  waitron wm_quit 0
super + l
  lock
super + s
  lock && systemctl suspend

# Media
XF86AudioRaiseVolume
  amixer set Master 5%+
XF86AudioLowerVolume
  amixer set Master 5%-
XF86AudioMute
  amixer set Master toggle
XF86AudioPlay
  playerctl play-pause
XF86AudioNext
  playerctl next
XF86AudioPrev
  playerctl previous

# Backlight
super + XF86AudioRaiseVolume
  xbacklight -inc 10
super + XF86AudioLowerVolume
  xbacklight -dec 10

# Screenshots
super + z
  scrot -e 'mv $f ~/Desktop/'
super + shift + z
  sleep 0.2; scrot -e 'mv $f ~/Desktop/' -s

# Applications
super + ctrl + space
  urxvt
super + ctrl + a
  anki
super + ctrl + e
  emoji-keyboard -s
super + ctrl + b
  firefox-developer
super + ctrl + m
  spotify --force-device-scale-factor=$WINDOW_SCALING
super + ctrl + d
  sqlectron
super + ctrl + t
  urxvt -e htop
super + ctrl + c
  urxvt -e tty-clock -c
super + ctrl + shift + c
  urxvt -e tty-clock -c

# Group management
super + {1-9}
  waitron group_toggle {1-9}
super + shift + {1-9}
  waitron group_add_window {1-9}
super + ctrl + {1-9}
  waitron group_activate_specific {1-9}

# Move windows
super + c
  fgwm center
super + {Up,Down,Left,Right}
  fgwm move {0 -2,0 2,-2 0,2 0}
super + shift + {Up,Down,Left,Right}
  fgwm move {0 -1,0 1,-1 0,1 0}
super + ctrl + {Up,Down,Left,Right}
  fgwm throw {up,down,left,right}

# Size windows
super + alt + ctrl + 1
  fgwm teleport 8 0 16 24
super + alt + ctrl + 2
  fgwm teleport 6 0 18 24
super + alt + ctrl + 3
  fgwm teleport 4 0 20 24
super + alt + ctrl + shift + 1
  fgwm teleport 8 6 16 18
super + alt + ctrl + shift + 2
  fgwm teleport 6 4 18 20
super + alt + ctrl + shift + 3
  fgwm teleport 4 2 20 22

# Resize windows
super + {Prior,Next,Home,End}
  fgwm grow {0 -2,0 2,-2 0,2 0}
super + shift + {Prior,Next,Home,End}
  fgwm grow {0 -1,0 1,-1 0,1 0}
super + ctrl + {Prior,Next,Home,End}
  fgwm spread {up,down,left,right}
super + f
  waitron window_maximize
super + v
  waitron window_ver_maximize

# Snap!
super + space
  fgwm snap

# Focus windows
super + BackSpace
  waitron window_focus_last
super + alt + {Up,Down,Left,Right}
  waitron window_cardinal_focus {up,down,left,right}
super + Tab
  waitron window_cycle
super + shift + Tab
  waitron window_rev_cycle
