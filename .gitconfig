[push]
    default = current

[alias]
    graph = log --graph --decorate --oneline
    ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
    hash = "!gh() { git log -1 | awk 'NR == 1 { print $2 }' ;}; gh"

[url "git@github.com:"]
    insteadOf = "https://github.com/"

[core]
    pager = less -x1,5
